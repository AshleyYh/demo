<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yuhang.demo.auth.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.yuhang.demo.auth.entity.SysUser">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="enabled" property="enabled" />
    </resultMap>

    <resultMap id="RoleResultMap" type="com.yuhang.demo.auth.entity.SysRole">
        <id column="id" property="id" />
        <result column="role_code" property="roleCode" />
        <result column="role_name" property="roleName" />
    </resultMap>

    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT id, username, password, enabled
        FROM sys_user
        WHERE username = #{username}
    </select>

    <select id="selectRoleByUserId" resultMap="RoleResultMap">
        SELECT
            sr.id,
            sr.role_code,
            sr.role_name
        FROM
            sys_role sr
                JOIN
            sys_user_role sur ON sr.id = sur.role_id
        WHERE
            sur.user_id = #{userId}
    </select>

</mapper>